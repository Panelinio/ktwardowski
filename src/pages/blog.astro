import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Blog">
	<main>
		<header>
			<a href="/">Home</a>
			<a href="/about/">About</a>
			<a href="/blog/">Blog</a>
		</header>

        <h1>Blog</h1>
        <p>
            <strong>Witaj na mojej stronie!</strong>
        </p>Nazywam się <strong class="text-gradient">Kacper</strong> i jestem studentem informatyki na Uniwersetycie WSB we Wrocławiu.
