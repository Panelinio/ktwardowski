---
interface Props {
  title: string;
  body: string;
  src: string;
}

const { src, title, body } = Astro.props;
---

<article class="link-card">
  <section class="image">
    <img src={src} alt={body} />
  </section>
  <section class="desc">
    <h2>
      {title}
    </h2>
    <p>
      {body}
    </p>
  </section>
</article>
<style>
  .link-card {
    display: flex;
    flex-direction: column;
    box-shadow:
      inset rgba(0, 0, 0, 0.1) 0 2px 2px,
      inset rgba(0, 0, 0, 0.1) 0 4px 4px,
      inset rgba(0, 0, 0, 0.1) 0 8px 8px,
      inset rgba(0, 0, 0, 0.1) 0 -16px 16px,
      inset rgba(0, 0, 0, 0.1) 0 -32px 32px,
      inset rgba(0, 0, 0, 0.1) 0 -64px 64px;
    padding: 1rem;
    border-radius: 8px;
    width: 30%;
    margin: 1.5rem;
    opacity: 0;
    transform: translateY(20px);
    transition:
      opacity 0.6s ease-out,
      transform 0.6s ease-out;
  }

  .link-card.visible {
    opacity: 1;
    transform: translateY(0);
  }

  h2 {
    margin: 0;
    font-size: 1.6rem;
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
    font-size: 1rem;
  }
  .desc,
  .image {
    width: 100%;
  }
  .image img {
    width: 70%;
    border-radius: 6px;
    cursor: pointer;
  }
  
  @container main (max-width: 768px) {
    .link-card {
      width: 70%;
    }

    .image img {
      width: 100%;
    }
  }
</style>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const cards = document.querySelectorAll(".link-card");

    const observer = new IntersectionObserver(
      (entries, observer) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add("visible");
            observer.unobserve(entry.target);
          }
        });
      },
      {
        threshold: 0.1,
      }
    );

    cards.forEach((card) => {
      observer.observe(card);
    });
  });
</script>
