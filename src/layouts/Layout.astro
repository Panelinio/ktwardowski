---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@0,100..700;1,100..700&family=Sono:wght@200..800&display=swap");
  :root {
    --accent: rgb(52, 103, 155);
    --accent-light: rgb(136, 187, 204);
    --accent-dark: rgb(7, 15, 43);
    --white: #f1f3e9;
    --dark: #20201f;
    --accent-gradient: linear-gradient(
      45deg,
      var(--accent),
      var(--accent-light) 30%,
      white 60%
    );
  }
  html {
    font-family: "Josefin Sans", sans-serif;
    background-color: var(--dark);
    color: #f1f3e9;
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    padding: 0;
  }

  main {
    margin: auto;
    padding: 1rem;
    width: 75%;
    max-width: calc(100% - 2rem);
    font-size: 20px;
    line-height: 1.6;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 6rem;
    width: 100%;
    position: sticky;
    top: 0;
    background-color: var(--dark);
    z-index: 1000;
    box-shadow: inset 0 -1px 0 0 var(--accent);
  }

  header a {
    color: var(--white);
    text-decoration: none;
  }

  .web {
    display: flex;
    flex-direction: column;
    padding: 1rem 1rem 0rem 0rem;
    color: var(--accent);
  }

  .web a {
    font-size: 1.6rem;
    font-weight: 700;
    color: var(--accent);
  }

  .web p {
    font-size: 1.2rem;
    font-weight: 300;
    margin-top: 0;
  }

  nav {
    display: flex;
    justify-content: center;
    font-size: 1.4rem;
  }

  nav a {
    margin-left: 2.5rem;
    transition: all 0.2s ease-out 0.5ms;
  }

  nav a:hover {
    color: var(--accent);
  }

  p {
    font-size: 1.25rem;
    line-height: 1.5;
    max-width: 65ch;
    text-wrap: balance;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }

  /* ===== Scrollbar CSS ===== */
  /* Firefox */
  * {
    scrollbar-width: auto;
    scrollbar-color: var(--accent-light) var(--dark);
  }

  /* Chrome, Edge, and Safari */
  *::-webkit-scrollbar {
    width: 16px;
  }

  *::-webkit-scrollbar-track {
    background: var(--dark);
  }

  *::-webkit-scrollbar-thumb {
    background-color: var(--accent-light);
  }
</style>
